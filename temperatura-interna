#! /bin/sh
# /etc/init.d/temperatura-interna

### BEGIN INIT INFO
# Provides:          temperatura-interna
# Required-Start:    $all
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Simple script to start a program at boot
# Description:       A simple script from www.stuffaboutcode.com which will start / stop a program a boot / shutdown.
### END INIT INFO

# If you want a command to always run, put it here
/home/pi/Documents/raspberry-misc/temperatura-interna-raspberry.py

# Carry out specific functions when asked to by the system
case "$1" in
 start)
	 echo "Starting temperatura-interna"
	 # run application you want to start
	 /home/pi/Documents/raspberry-misc/temperatura-interna-raspberry.py
	 ;;
 stop)
	 echo "Stopping temperatura-interna"
	 # kill application you want to stop
	 killall temperatura-interna
	 ;;
 *)
	 echo "Usage: /etc/init.d/temperatura-interna {start|stop}"
	 exit 1
	 ;;
esac

exit 0
